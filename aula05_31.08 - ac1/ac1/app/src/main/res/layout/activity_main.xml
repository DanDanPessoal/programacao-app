<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView

        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calculadora de Média SPTECH"
        android:textSize="25sp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"

        />

    <EditText

        android:id="@+id/et_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o nome do aluno"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <EditText

            android:id="@+id/et_n1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nota 1"
            android:inputType="number"

            />

        <EditText

            android:id="@+id/et_n2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nota 2"
            android:inputType="number"

            />

        <EditText

            android:id="@+id/et_n3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nota 3"
            android:inputType="number"

            />


    </LinearLayout>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="CALCULAR MÉDIA"
        android:backgroundTint="@color/green_cyan"
        android:onClick="calculaMedia"

        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />

        <TextView

            android:id="@+id/tv_textoResultado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Aluno: Daniel K. Situação: Aprovado com honras"
            android:layout_weight="6"

            />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />

    </LinearLayout>


</LinearLayout>