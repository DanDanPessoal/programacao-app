<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FigurinhaActivity">

    <TextView

        android:id="@+id/tv_barra_azul"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:background="@color/purple_700"
        
        />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_barra_azul">

        <TextView
            
            android:id="@+id/tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Neymar" />

        <TextView
            
            android:id="@+id/tv_nasc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="16/04/2003" />

        <TextView
            
            android:id="@+id/tv_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Venezuela" />
        
        <ImageView

            android:id="@+id/iv_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cris"

        />

        <Button

            android:id="@+id/btn_back"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Voltar para o Ã¡lbum"
            android:textSize="11sp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>